<div class="row-fluid" data-tag="models">
  <div class="page-header">
    <h1>Models</h1>
  </div>

  <div class="span12">
    <table class="table table-striped">
      <tbody data-place="models">
        {{#models}}
          <tr>
            <td>
              <h2>
                <a href="javascript:void(0)"
                  data-action="model" data-uri="{{uri}}">{{name}}</a>
              </h2>
              <p>{{description}}</p>
            </td>
          </tr>
        {{/models}}
      </tbody>
    </table>
  </div>
</div>

<div class="row-fluid" data-tag="model" style="display:none">
  <div class="page-header">
    <div class="pull-right">
      <a href="javascript:void(0)" class="btn btn-primary"
        data-action="add">Add</a>
      <a href="javascript:void(0)" class="btn"
        data-action="list_models">List models</a>
    </div>
    <h1 data-tag="modelname">test</h1>
    <p data-tag="modeldesc">{{description}}</p>
  </div>

  <div class="span12">
    <table class="table table-striped">
      <thead data-tag="modelheaders">
      </thead>
      <tbody data-tag="modeldata">
      </tbody>
    </table>
    <div data-tag="pager"></div>
  </div>
</div>
